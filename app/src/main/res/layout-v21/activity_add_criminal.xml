<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddCriminalActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/cv">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:elevation="20dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Criminals List"
                android:textSize="25sp"
                android:id="@+id/title"
                android:layout_marginLeft="25dp"
                android:gravity="center_vertical"
                android:textColor="#0C0C0C"

                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Search"
                android:id="@+id/search_editText"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="50dp"
                android:visibility="gone"

                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="end"
                android:id="@+id/search"
                android:layout_marginEnd="25dp"
                android:src="@drawable/ic_search_black_24dp" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="end"
                android:id="@+id/CROSS"
                android:layout_marginEnd="25dp"
                android:rotation="45"
                android:visibility="gone"
                android:src="@drawable/ic_add_black_24dp" />
            <ImageView
                android:layout_width="25dp"
                android:layout_height="match_parent"
                android:layout_gravity="end"
                android:id="@+id/down"
                android:src="@drawable/ic_arrow_drop_down_black_24dp" />

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:id="@+id/sort_cv"
         >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Spinner
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/query_type"
                    android:layout_marginStart="8dp"
                    />
                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/spinner"
                    android:layout_marginEnd="20dp"
                    android:layout_marginStart="10dp"
                    />


            </LinearLayout>



        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/searchCV"
             >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <AutoCompleteTextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:layout_marginStart="15dp"
                    android:hint="Type here...."
                    android:id="@+id/stateOrDistrict"

                    />

                <ImageView
                    android:id="@+id/search2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="end"
                  android:layout_marginEnd="10dp"
                    android:src="@drawable/ic_search_black_24dp" />



            </LinearLayout>



        </androidx.cardview.widget.CardView>

    </LinearLayout>




    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/criminal_list_RV"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/cv"
        />
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:id="@+id/noMatchesFound"
        app:cardCornerRadius="10dp"
        android:layout_centerHorizontal="true"
        >
     <TextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_margin="10dp"
         android:text="No Mathes Found......"
         />

    </androidx.cardview.widget.CardView>


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/add_criminal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:clickable="true"
        app:srcCompat="@drawable/ic_add_black_24dp"
        tools:ignore="VectorDrawableCompat"
        android:focusable="true" />
</RelativeLayout>